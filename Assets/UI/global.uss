:root {
    --game-cyan--: rgb(45, 226, 230);
    --game-magenta--: rgb(255, 0, 255);
}

.hidden {
    visibility: hidden;
}

.game-cyan-border {
    border-color: var(--game-cyan--);
}
.game-magenta-border {
    border-color: var(--game-magenta--);
}

.game-element {
    background-color: rgb(0, 0, 0);
    color: rgb(255, 255, 255);
}

